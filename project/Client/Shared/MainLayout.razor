@inherits LayoutComponentBase

<div class="container-fluid vh-100 d-flex flex-column">
    <div class="row flex-grow-1">
        <project.Client.Shared.IMPORTED.ClientLayout />
        
        <!-- Sidebar -->
        <nav class="col-12 col-md-3 col-lg-2 bg-dark text-white p-3 d-flex flex-column">
            <h2 class="fs-5 text-center mb-4">Menu</h2>
            <NavMenu />
        </nav>

        <!-- Main Content -->
        <main class="col p-0">
